.title
  color color-4
  font-size 30px
  text-transform uppercase
  width 610px
  margin 30px auto
  text-align center

.description
  color color-gray
  text-align center
  max-width 670px
  font-weight 300
  margin 0 auto
  
.content
  margin-top -100px
  .features-section
    margin-top 100px
    h2
      text-align center
      text-transform uppercase
      color color-4
      font-size 30px
    ul
      list-style none
      display flex
      max-width 1100px
      margin 0 auto
      padding 0
      li
        color color-4
        text-align center
        padding 50px
        .browser-icon, .packlist-icon, .clock-icon
          width 80px
          height 80px
        .packlist-icon
          margin-left 30px
        h3
          margin 0
        p
          font-weight 300
          color color-gray
  .review-section
    text-align center
    h2
      @extend .title
      color color-5
      width 700px
      font-weight 300
      span
        font-weight bold
      & + p
        @extend .description
    .review-app
      margin-top 40px

  .otimize-section
    margin-top 40px
    h2
      font-size 100px
      text-transform uppercase
      text-align center
      font-weight 300
      color color-orange-light
      margin-bottom 18px
      span
        font-weight bold
      & + p
        @extend .description
  footer
    background color-3
    padding 160px 60px 35px 60px
    margin-top 50px
    position relative
    .add-chrome
      position absolute
      top -8px
      left 50%
      transform translateX(-50%)
      a
        text-decoration none
        padding 15px 30px