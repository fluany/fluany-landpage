.title
  color color-4
  font-size 1.8rem
  text-transform uppercase
  width 610px
  margin 30px auto
  text-align center

.description
  color color-gray
  text-align center
  max-width 670px
  font-weight 300
  margin 0 auto
  
.content
  margin-top -100px
  .features-section
    margin-top 100px
    h2
      text-align center
      text-transform uppercase
      color color-4
      font-size 30px
    ul
      list-style none
      display flex
      max-width 1100px
      margin 40px auto
      padding 0
      +mobile()
        flex-wrap wrap
      li
        color color-4
        text-align center
        padding 20px 50px
        .browser-icon, .packlist-icon, .clock-icon
          width 80px
          height 80px
        .packlist-icon
          margin-left 30px
        h3
          margin 0
        p
          font-weight 300
          color color-gray
  .review-section
    text-align center
    h2
      @extend .title
      color color-5
      +mobile()
        width 100%
      font-weight 300
      span
        font-weight bold
      & + p
        @extend .description
    .review-app
      margin-top 40px
      max-width 70%

  .otimize-section
    margin-top 40px
    h2
      font-size 6.2rem
      text-transform uppercase
      text-align center
      font-weight 300
      color color-orange-light
      margin-bottom 18px
      span
        font-weight bold
      & + p
        @extend .description
      +mobile()
        font-size 2rem
  footer
    background color-3
    padding 160px 60px 35px 60px
    margin-top 50px
    position relative
    .add-chrome
      position absolute
      top -8px
      left 50%
      transform translateX(-50%)
      a
        text-decoration none
        padding 15px 30px

.fish-animation-1, .fish-animation-2, .fish-animation-3, .fish-animation-4
  width 46px
  height 46px
  fill #269f9f
  animation fish-1 30s ease-in-out infinite
  position absolute

.fish-animation-1
  animation: fish-1 30s ease-in-out infinite;

.fish-animation-2
  top 50%
  left 90%
  fill #197575
  animation: float 6s ease-in-out infinite;
  animation-delay 2s
  +mobile()
    display none
.fish-animation-3
  left -70px
  top: 20%
  animation-delay 4s
  +mobile()
    top 10%
.fish-animation-4
  width 35px
  fill #1e9090
  height 35px
  animation: float 6s ease-in-out infinite;
  top 50%
  animation-delay 2s
  +mobile()
    display none


@keyframes fish-1 {
	0% {
		transform translateX(0)
	}
	50% {
		transform translateX(200px)
	}

	51% {
		transform translateX(200px) rotateY(180deg)
	}

	100% {
		transform translateX(0) rotateY(180deg)
	}
}

@keyframes float {
	0% {
		transform translatey(5px)
	}
	50% {
		transform translatey(-8px)
	}
	100% {
		transform translatey(5px)
	}
}

@keyframes bubble-flip {
  100% {
    transform: translateY(-200px) rotate(1080deg);
    opacity: 0;
  }
}
