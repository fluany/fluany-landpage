@import 'kouto-swiss'
normalize()
.btn
  text-decoration none
  padding 19px 40px
  font-weight 600
  color #FFF
  border-radius 4px
  border none
  text-transform uppercase
  background color-4
  font-size 13px
  outline none
  transition .3s all
  &:hover
    background darken(color-4, 10%)
body, html
	font-family "Calibri", sans-serif
	font-feature-settings "liga" 0
	height 100%

h2, p
  margin 0